<?xml version="1.0" encoding="utf-8"?>
<resources>
    <color name="colorPrimary">#3F51B5</color>
    <color name="colorPrimaryDark">#303F9F</color>
    <color name="colorAccent">#FF4081</color>

    <!-- 是否居中显示 -->
    <bool name="default_circle_indicator_centered">true</bool>

    <!-- 选中时的颜色 -->
    <color name="default_circle_indicator_fill_color">#EB9718</color>
    <!-- 未选中时的颜色 -->
    <color name="default_circle_indicator_page_color">#FFFFFF</color>
    <!-- E93333 -->

    <integer name="default_circle_indicator_orientation">0</integer>
    <!-- 圆点的半径大小 -->
    <dimen name="default_circle_indicator_radius">4dip</dimen>
    <!-- 选择false时会有滑动动画 -->
    <bool name="default_circle_indicator_snap">false</bool>
    <!-- 未选中时周围圈的颜色 -->
    <color name="default_circle_indicator_stroke_color">#FFFFFF</color>
    <!-- FF0000 -->
    <!-- 未选中时周围圈的宽度 -->
    <dimen name="default_circle_indicator_stroke_width">0dip</dimen>
</resources>
